# Backend Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/nssf_pensioner_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"
API_VERSION="v1"

# Redis Configuration (for sessions and caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Email Configuration (SMTP)
EMAIL_SERVICE="gmail"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="NSSF Pensioner Portal <noreply@nssfug.org>"

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# File Upload Configuration
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx"

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this-in-production"
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key!!"
ENCRYPTION_ALGORITHM="aes-256-gcm"

# NSSF Specific Configuration
NSSF_ORGANIZATION_NAME="National Social Security Fund Uganda"
NSSF_SUPPORT_EMAIL="customerservice@nssfug.org"
NSSF_SUPPORT_PHONE="+256312234400"
NSSF_WEBSITE="https://www.nssfug.org"

# Payment Processing
PAYMENT_PROCESSING_DAY=15
PAYMENT_BATCH_SIZE=1000

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"
